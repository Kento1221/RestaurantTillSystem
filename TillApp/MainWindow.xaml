                    </ScrollViewer>
                    <!--#region Total price-->
                    <DockPanel LastChildFill="False" Margin="15">
                        <TextBlock 
                            DockPanel.Dock="Left" 
                            FontSize="24" 
                            FontFamily="Arial" 
                            FontWeight="Bold"
                            Text="Total:"/>
                        <TextBlock 
                            DockPanel.Dock="Right" 
                            FontSize="24" 
                            FontFamily="Arial"
                            TextAlignment="Right" 
                            Text="xxx zł"/>
                    </DockPanel>
                    <!--#endregion-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <!--#endregion-->
        <!--#region RightSideMenu-->
