                            x:Name="Waiter_Name" 
                            DockPanel.Dock="Left" 
                            Margin="15,0,0,0" 
                            FontFamily="Arial" 
                            FontSize="24" 
                            FontWeight="Bold"
                            Text=""/>
                        <TextBlock 
                            x:Name="Customer_Table" 
                            DockPanel.Dock="Right" 
                            Margin="0,0,15,0" 
                            FontFamily="Arial" 
                            FontSize="24" 
                            FontWeight="Bold"
                            Text="T23"/>
                    </DockPanel>
                    <DockPanel
                        LastChildFill="False"
                        Margin="0,0,0,25">
                        <TextBlock 
                            x:Name="Customer_Date"  
                            DockPanel.Dock="Right" 
                            Margin="0,0,15,0" 
                            FontFamily="Arial" 
                            FontSize="18" 
                            Text="04.07.2020"/>
                        <TextBlock 
                            x:Name="Customer_Time"  
                            DockPanel.Dock="Left" 
                            Margin="15,0,0,0" 
                            FontFamily="Arial" 
                            FontSize="18" 
                            Text="13:54"/>
                    </DockPanel>
                    <ScrollViewer 
                        x:Name="Scroll_Content" 
                        VerticalScrollBarVisibility="Auto" 
                        CanContentScroll="True" 
                        HorizontalAlignment="Right" 
                        FlowDirection="LeftToRight" 
                        Height="800" 
                        Width="350"
                        Background="LightGray">
